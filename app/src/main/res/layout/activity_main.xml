<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sebanes.sebanes_lab_quiz.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAMOUS QUOTES"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"/>

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvAuthor"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quote:"
        android:layout_below="@+id/tvAuthor"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/etQuote"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/tvQuote"
        android:layout_below="@id/etAuthor"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_below="@+id/etQuote"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:onClick="save"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_toRightOf="@+id/btnSave"
        android:layout_below="@id/etQuote"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:onClick="next"/>
</RelativeLayout>
